@{
    Layout = "_Layout";
}

@model IEnumerable<cmcs_.Models.Claim>

<div class="card mt-4">
    <div class="card-header bg-primary text-white">
        <h5>Track Your Claims</h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                You have no claims submitted for tracking.
            </div>
        }
        else
        {
            <table class="table table-striped table-bordered table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <th>Lecturer Name</th>
                        <th>Status</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.LecturerName</td>
                            <td>
                                <span class="badge @(claim.Status == "Approved" ? "badge-success" : claim.Status == "Rejected" ? "badge-danger" : "badge-warning")">
                                    @claim.Status
                                </span>
                            </td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
